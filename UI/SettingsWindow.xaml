<Window x:Class="UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <CheckBox Name="CB_ValidateOnInstanceLoaded">ValidateOnInstanceLoaded</CheckBox>
            <CheckBox Name="CB_ReloadTaxonomyOnInstanceLoaded">ReloadTaxonomyOnInstanceLoaded</CheckBox>
            <CheckBox Name="CB_ReloadFullTaxonomyButStructure">ReloadFullTaxonomyButStructure</CheckBox>
            <CheckBox Name="CB_ReloadFullTaxonomy">ReloadFullTaxonomy</CheckBox>
            <CheckBox Name="CB_ReDownloadFiles">ReDownloadFiles</CheckBox>
            <CheckBox Name="CB_CheckValidationCells">CheckValidationCells</CheckBox>

        </StackPanel>
        <Button Name="B_Save" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Click="B_Save_Click">Save</Button>
    </Grid>
</Window>
